<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overallsafety_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light300"
    android:orientation="vertical">

    <!-- Status Text View -->
    <TextView
        android:id="@+id/safetyStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/neuehaasdisplaybold"
        android:text="Safe to Walk Alone"
        android:textColor="@color/dark500"
        android:textSize="18sp" />

    <!-- Route Details and Circular Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Route Details Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <!-- Route Name -->
            <TextView
                android:id="@+id/routeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route Name"
                android:textColor="@color/dark500"
                android:textSize="16sp"
                android:fontFamily="@font/neuehaasdisplaybold"
                android:layout_marginBottom="8dp" />

            <!-- Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/routeTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textColor="@color/dark500"
                    android:textSize="14sp"
                    android:fontFamily="@font/neuehaasdisplayroman" />

                <TextView
                    android:id="@+id/routeTimeValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dynamic Time"
                    android:textColor="@color/dark500"
                    android:textSize="14sp"
                    android:fontFamily="@font/neuehaasdisplayroman" />
            </LinearLayout>

            <!-- Kilometers -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/routeKmTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilometers: "
                    android:textColor="@color/dark500"
                    android:textSize="14sp"
                    android:fontFamily="@font/neuehaasdisplayroman" />

                <TextView
                    android:id="@+id/routeKmValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dynamic Kilometers"
                    android:textColor="@color/dark500"
                    android:textSize="14sp"
                    android:fontFamily="@font/neuehaasdisplayroman" />
            </LinearLayout>
        </LinearLayout>

        <!-- Circular Progress Bar and Arrow Indicator Column -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/progressBarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">

                <!-- Circular Progress Bar -->
                <ProgressBar
                    android:id="@+id/overallsafetyProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <!-- Safety Score Text -->
                <TextView
                    android:id="@+id/overallsafetyCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/dark500"
                    android:textSize="16sp"
                    android:text="75"/> <!-- Example text; replace with dynamic data -->
            </FrameLayout>
        </LinearLayout>

        <!-- Arrow Indicator -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="-6dp"
            android:src="@drawable/arrow_right"
            android:contentDescription="More Details"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Start Navigation Button -->
    <Button
        android:id="@+id/startNavigationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Navigation"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/neuehaasdisplaybold"
        android:background="@drawable/button_bg"
        android:textColor="@color/light300"/>

</LinearLayout>